{{else}}
<div class="jumbotron text-center">
  <h1>Welcome</h1>
  <p>Keep track of your todo tasks</p>
  <p><a class="btn btn-primary btn-lg" href="users/login" role="button">Add Todo</a></p>
</div>
{{/if}}