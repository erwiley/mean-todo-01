{{#if user}}
<div class="row">
<div class="col-md-6 col-md-offset-3">
<h1>Todo Application</h1>
<hr>    
<table class="table table-condensed">
    <thead>
        <tr>
            <th>ToDo</th>
            <th>&nbsp</th>
            <th>&nbsp</th>
        </tr>
    </thead>
    <tbody>
        {{#each todos}}
        <tr>
            <td>
                <span>{{item}}</span>
            </td>
            <td class="pull-to-right">
                <!-- <button class="btn btn-xs btn-danger" ng-show="ticked" ng-click="remove(todo._id)"> -->
                    <!-- <span class="glyphicon glyphicon-remove"></span><span>Remove</span> -->
                <!-- </button> -->

                <form method="post" action="/todos/{{id}}?_method=DELETE">
                    <input type="hidden" name="_method" value="DELETE">
                    <input type="submit" class="btn btn-xs btn-danger" value="Remove">
                </form>
            </td>
            <td>
                <a class="btn btn-xs btn-info" href="/todos/edit/{{id}}">Edit</a>
            </td>
        </tr>
        {{else}}
            <p>No Todos Listed</p>
        {{/each}}
    </tbody>
</table>
</p>

<hr>

